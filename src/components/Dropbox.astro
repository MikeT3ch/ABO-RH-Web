---
interface Props {
	name: string;
	id: string;
	desc: string;
	options: Array<string>;
	color: string;
	extra?: string;
}
const {name, id, desc, options, color, extra} = Astro.props as Props;
---
<label for={id} class="font-bold">{desc}</label>
<select name={name} id={id} class={`"min-w-[20%] h-10 ${color} rounded-md p-1 ${extra}"`}>
	{options.map((opt) =>(
		<option value={opt}>{opt}</option>
	)) }
</select>
